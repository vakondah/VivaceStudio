@model ChangePasswordViewModel
@{
    Layout = "_ProfileLayout";
}


    <div class="col-9">
        <h4>Email Settings:</h4><br />

            <form method="post" asp-action="ChangePassword" asp-controller="Account">
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Email:</label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <h4>Password Settings:</h4><br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Old Password:</label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="OldPassword" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>New Password:</label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="NewPassword" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        <label>Confirm Password:</label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <div class="col">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <button type="Submit" class="btn btn-primary">Save</button>
                    <a asp-action="AccountSettings" asp-controller="Account" class="btn btn-primary">Cancel</a>
                </div>
            </form><br />

        <form asp-action="RemoveAccount" asp-controller="Account" method="post">
            <h4>Account Settings:</h4><br />

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="formCheck-1" />
                <label class="form-check-label" for="formCheck-1">Remove account permanently</label>
            </div><br />

            <div class="form-group">
                <label>Tell us why you are leaving:</label>
                <textarea class="form-control" ></textarea>
            </div>
            <div class="form-group">
                <button type="Submit" class="btn btn-primary">Remove Account</button>
                <a asp-action="AccountSettings" asp-controller="Account" class="btn btn-primary">Cancel</a>
            </div>
        </form>

    </div>