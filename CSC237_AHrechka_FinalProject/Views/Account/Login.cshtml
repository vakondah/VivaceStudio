@model LoginViewModel

@{ 
    ViewBag.Title = "Login";
}

<h1>Login</h1>


<div class="login-dark shadow-lg">
    <form method="post" asp-action="Login"
          asp-route-returnURL="@Model.ReturnURL">

        <div class="illustration"><i class="fa fa-lock small"></i></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Username" class="form-control" placeholder="Username" />
            <div class="col">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <div class="col">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <input type="checkbox" title="Remember Me"
                   asp-for="RememberMe" class="form-check m-3" />
            <lable class="forgot mt-2">Remember Me</lable>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block m-0">Log In</button>
        </div>

        <div class="form-group forgot">
            Not registered?
            <a asp-action="Register">Register as a new user</a>
        </div>
    </form>
</div>