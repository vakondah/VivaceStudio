@model PracticeLog

<h2>Practice Details</h2>

<form asp-action="Save" method="post">
    <div class="col-9">
        <div class="form-group">
            <label asp-for="Date">Date:</label>
            <div class="col-sm-8">
                <input asp-for="Date" type="date" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Duration">Duration:</label>
            <div class="col-sm-8">
                <input asp-for="Duration" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Note">Note:</label>
            <div class="col-sm-8">
                <input asp-for="Note" class="form-control" />
            </div>
        </div>
        <input type="hidden" asp-for="PracticeLogID" />
        <input type="hidden" asp-for="UserID" />
        <input type="hidden" asp-for="DayOfWeek" />
        <input type="hidden" asp-for="PracticeStartTime" />
        <input type="hidden" asp-for="PracticeEndTime" />


        <button type="Submit" class="btn btn-primary">Save</button>
        <a asp-action="Save" class="btn btn-primary">Continue</a>

    </div>
</form>
