@{
    Layout = "_ProfileLayout";
}


<div class="col-9">
    <div class="form-group">
        <div>
            <h4>Email Settings:</h4><br />
            <label>Enter new email: <input type="text" /></label>
        </div><br />
        <div>
            <label>Confirm email: <input type="text" /></label>
        </div><br />
    </div>
    <div class="form-group">
        <div>
            <h4>Password Settings:</h4><br />
            <label>Enter new password: <input type="text" /></label>
        </div><br />
        <div>
            <label>Confirm password: </label>
            <input type="text" />
        </div><br />
    </div>
    <div class="form-group">
        <button type="Submit" class="btn btn-primary">Save</button>
        <a asp-action="AccountSettings" class="btn btn-primary">Cancel</a>
    </div>        <div class="form-group">
        <h4>Account Settings:</h4>
        <div class="form-check"><input class="form-check-input" type="checkbox" id="formCheck-1" /><label class="form-check-label" for="formCheck-1">Remove account permanently</label></div>
    </div>
    <div class="form-group">
        <label>Tell us why you are leaving:</label>
        <div><textarea class="form-control-lg" autofocus></textarea></div>
    </div>
    <div class="form-group">
        <button type="Submit" class="btn btn-primary">Remove Account</button>
        <a asp-action="AccountSettings" class="btn btn-primary">Cancel</a>
    </div>
</div>