@{
    Layout = "_ProfileLayout";
}


<div class="col-9">
    <div class="form-group">
        <h4>Chatting Room Settings:</h4><br />
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="formCheck-1" checked />
            <label class="form-check-label" for="formCheck-1">Allow public messages</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="formCheck-1" checked />
            <label class="form-check-label" for="formCheck-1">Allow private messages</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="formCheck-1" checked />
            <label class="form-check-label" for="formCheck-1">Show notifications</label>
        </div>
    </div><br />
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="formCheck-1" />
            <label class="form-check-label" for="formCheck-1">Turn Chat off</label>
        </div>
    </div>
    <div class="form-group">
        <button type="Submit" class="btn btn-primary">Save</button>
        <a asp-action="ChatSettings" class="btn btn-primary">Cancel</a>
    </div>
</div>