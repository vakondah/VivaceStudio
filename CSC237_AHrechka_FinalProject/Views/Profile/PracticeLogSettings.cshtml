@{
    Layout = "_ProfileLayout";
}


<div class="col-9">
    <div class="form-group">
        <h4>Progress bar settings:</h4><br />
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="formCheck-1" checked />
            <label class="form-check-label" for="formCheck-1">Show desired practice time</label>
        </div><br />
        <div>
            <label>Choose desired practice time:</label>
            <select>
                <option value="0">30 min</option>
                <option value="1">1 hour</option>
                <option value="2">1.5 hours</option>
                <option value="3" selected>2 hours</option>
                <option value="4">2.5 hours</option>
                <option value="5">3 hours</option>
                <option value="6">3.5 hours</option>
                <option value="7">4 hours</option>
                <option value="8">4.5 hours</option>
                <option value="9">5 hours</option>
                <option value="10">5.5 hours</option>
                <option value="11">6 hours</option>
            </select>
        </div><br />
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="formCheck-1" checked />
            <label class="form-check-label" for="formCheck-1">Show average practice time</label>
        </div>
    </div>
    <div>
        <label>
            Show average practice time for
            <input type="number" value="30" /> days
        </label>
    </div><br />
    <div class="form-group">
        <h4>Practice Log settings:</h4>
    </div>
    <div>
        <label>Show <input type="number" value="10" /> entries per page</label>
    </div><br />
    <div class="form-group">
        <label>Show</label>
        <select>
            <option value="13">ascending</option>
            <option value="14" selected>descending</option>
        </select>
    </div>
    <div class="form-group">
        <div class="form-check"><input class="form-check-input" type="checkbox" id="formCheck-1" checked /><label class="form-check-label" for="formCheck-1">Allow adding audio files</label></div>
    </div>
    <div class="form-group">
        <button type="Submit" class="btn btn-primary">Save</button>
        <a asp-action="PracticeLogSettings" class="btn btn-primary">Cancel</a>
    </div>
</div>
