@model Image
@{
    Layout = "_ProfileLayout";
}


<div class="col-9">
    <h4>Profile Picture:</h4>
    <img src="@ViewBag.ImageDataUrl" />
    
    <form asp-action="SaveImage" method="post" asp-controller="Profile"
          enctype="multipart/form-data">
        <div class="form-group" asp-controller="Profile"
             asp-action="UploadImage"
             method="post"
             enctype="multipart/form-data">
            <input type="file" id="file1" name="file1" multiple="multiple" />
        </div>
        <input type="hidden" asp-for="UserID" />
        <input type="hidden" asp-for="ImageID" />
        <input type="hidden" asp-for="ImageTitle" />
        <input type="hidden" asp-for="ImageData" />

        <button type="Submit" class="btn btn-primary">Save</button>
        <a asp-action="ProfilePicture" class="btn btn-primary">Cancel</a>
    </form>
</div>
