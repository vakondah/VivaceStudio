@model bool

@if (Model == true)
{
    <li class="nav-item ml-auto">
        <form method="post" asp-action="Logout" asp-controller="Account">
            <span class="text-dark">@User.Identity.Name</span>
            <input type="submit" value="Log Out"
                   class="btn btn-info action-button text-white ml-3" />
        </form>
    </li>
}
else
{
    var action1 = ViewContext.RouteData.Values["action"]?.ToString();
    <li class="nav-item">
        <a asp-action="Register" asp-controller="Account"
           class="nav-link">Register</a>
    </li>
    <li class="nav-item">
        <a asp-action="Login" asp-controller="Account"
           class="btn btn-info action-button text-white">Log In</a>
    </li>
}