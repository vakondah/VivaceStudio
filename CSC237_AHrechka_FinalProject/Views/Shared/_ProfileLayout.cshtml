<!--This layout is used for all profile pages, contains sidebar with settings links-->

@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "My Profile";
}
<h2 class="text-center">My Profile</h2>
<div class="row mt-5">
    <div class="col-3">
        <div class="list-group">
            <a asp-controller="Profile" asp-action="ProfilePicture" 
               class="list-group-item">Profile Picture</a>
            <a asp-controller="Profile" asp-action="SchoolInfo"
               class="list-group-item">School Info</a>
            <a asp-controller="Profile" asp-action="PersonalInfo"
               class="list-group-item">Personal Info</a>
            <a asp-controller="Profile" asp-action="PracticeLogSettings"
               class="list-group-item">Practice Log Settings</a>
            <a asp-controller="Profile" asp-action="ChatSettings"
               class="list-group-item">Chat Settings</a>
            <a asp-controller="Account" asp-action="AccountSettings"
               class="list-group-item">Account Settings</a>
        </div>
    </div>
    @RenderBody()
</div>